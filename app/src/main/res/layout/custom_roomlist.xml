<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#eee"
    app:cardCornerRadius="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_relativeLayout"
            android:gravity="center"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/subjectCode_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/note_c" />

                <TextView
                    android:id="@+id/scheduleCode_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:gravity="bottom"
                    android:textSize="16sp"
                    android:layout_gravity="bottom"
                    android:fontFamily="sans-serif-light"
                    android:text="Schedule code"
                    android:textColor="#333"
                   />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/subjectUnit_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subjectCode_linearLayout"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/door_c" />

                <TextView
                    android:id="@+id/roomCode_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Room code"
                    android:textColor="#333" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subjectUnit_linearLayout"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/list_x" />

                <TextView
                    android:id="@+id/subjectCode_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="4dp"
                    android:gravity="bottom"
                    android:text="Subject Code"
                    android:textColor="#333"
                   />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>