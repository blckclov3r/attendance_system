<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#eee"
    android:layout_marginTop="6dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    app:cardCornerRadius="12dp"
    app:contentPadding="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="2dp">

        <RelativeLayout
            android:id="@+id/image_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_studentList"
                android:layout_width="58dp"
                android:layout_height="67dp"
                android:src="@drawable/person" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/image_relativeLayout">
            
            <LinearLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <ImageView
                    android:src="@drawable/man_a"
                    android:layout_width="16dp"
                    android:layout_gravity="center"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/fullName_student_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="bottom"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_gravity="center"
                    android:text="FullName"
                    android:textColor="#333"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_below="@id/one"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/book_y"
                    android:layout_gravity="center"
                    android:layout_width="16dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/course_student_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:gravity="bottom"
                    android:text="Course"
                    android:textColor="#333" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:layout_below="@id/two"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/card_c"
                    android:layout_width="16dp"
                    android:layout_gravity="center"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/uid_student_textView"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom"
                    android:text="Student ID"
                    android:textColor="#333" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>